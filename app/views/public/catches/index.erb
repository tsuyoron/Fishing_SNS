<div class='container px-5 px-sm-0'>
    <% if @catch.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@catch.errors.count, "error") %>が原因でこの記事を保存できませんでした</h2>
        <ul>
          <% @catch.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class='row'>
    <div class='col-md-3'>
      <h2 class="mt-3">New catch</h2>
        <%= form_with model:@catch,local:true do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control book_title' %>
          </div>
          <div class="form-group">
            <%= f.label :opinion %>
            <%= f.text_area :body, class: 'form-control book_body' %>
          </div>
          <div class="form-group">
            <%= f.submit class: 'btn btn-success' %>
          </div>
        <% end %>

    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Catches</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @catches.each do |catch| %>
            <tr>
              <td>
              </td>
              <td><%= link_to catch.title,catch %></td>
              <td><%= catch.body %></td>


            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>